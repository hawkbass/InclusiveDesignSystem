{
  "name": "@inclusive-design/core",
  "version": "1.0.0",
  "description": "Inclusive Design System - Core Components and Styles",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./tokens.css": "./dist/tokens.css",
    "./tokens": {
      "types": "./dist/tokens.d.ts",
      "import": "./dist/tokens.esm.js",
      "require": "./dist/tokens.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "design-system",
    "react",
    "components",
    "accessibility",
    "inclusive-design",
    "ui-components",
    "tailwindcss"
  ],
  "author": "hawkbass",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hawkbass/InclusiveDesignSystem.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/hawkbass/InclusiveDesignSystem#readme",
  "bugs": {
    "url": "https://github.com/hawkbass/InclusiveDesignSystem/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
