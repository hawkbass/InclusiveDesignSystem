      }

      // Dark theme dot colors
      ctx.fillStyle = "#0f172a"
      ctx.beginPath()
      ctx.arc(x, y, 4, 0, Math.PI * 2)
      ctx.fill()

      ctx.strokeStyle = "#d946ef"
      ctx.lineWidth = 2
      ctx.beginPath()
      ctx.arc(x, y, 4, 0, Math.PI * 2)
      ctx.stroke()
    })
  }, [activeTab, hoverPoint, chartData])

